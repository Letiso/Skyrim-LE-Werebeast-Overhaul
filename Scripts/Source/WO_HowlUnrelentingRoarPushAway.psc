Scriptname WO_HowlUnrelentingRoarPushAway extends ActiveMagicEffect  


; ==============================================================================================
; ####### PROPERTIES

Int Property RandomRange Auto

; ####### PROPERTIES END
; ==============================================================================================

; ==============================================================================================
; ####### INTERNAL DATA
; ####### INTERNAL DATA END
; ==============================================================================================


; ==============================================================================================
; ####### EVENTS

;-----------------------------------------------------------------------
Event OnEffectStart(actor akTarget, actor akCaster)
	float _pushForce = self.GetMagnitude()

	;-----------------------------------------------------------------------
	; RandomRange value - a chance to push a target away
	;-----------------------------------------------------------------------
	if Utility.RandomInt(1, 100) <= RandomRange
		akCaster.PushActorAway(akTarget, _pushForce)
	endif

EndEvent

;########## EVENTS END

